# Connections between stm and fpga

# Clock (connected to a 50 MHz oscillator)
NET "clk"		LOC = P55;
NET "clk"		TNM_NET = clk;
TIMESPEC TS_clk = PERIOD "clk" 50 MHz HIGH 50%;




