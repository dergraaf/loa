# All hardware directly situated on the LOA v2b / v2c board

# all IO-Pins are 3.3V
NET "*"			IOSTANDARD = LVCMOS33;

# ----------------------------------------------------------------------------
# Connections to the STM32F407
#?NET "load_p"	LOC = P55;	# PE7
