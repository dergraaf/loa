# US RX: one LTC2351 ADC
NET "us_rx_spi_in_p_sdo"		LOC = P85 | PULLDOWN;
NET "us_rx_spi_out_p_sck"		LOC = P88 | SLOW | DRIVE = 2;
NET "us_rx_spi_out_p_conv"		LOC = P77 | SLOW | DRIVE = 2;

