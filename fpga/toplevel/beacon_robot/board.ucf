# US TX
NET "us_tx0_p_high"	LOC = P93;
NET "us_tx0_p_low"	LOC = P94;
NET "us_tx1_p_high"	LOC = P98;
NET "us_tx1_p_low"	LOC = P99;
NET "us_tx2_p_high"	LOC = P3;
